<!doctype html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="author" content="Gumil">
    <meta name="description" content="Przydatne linki, oraz kursy języków programowania">

    <title>rg-ts</title>

    <link rel="stylesheet" href="{{ absolute_url(asset('bootstrap-4.5.0-dist/css/bootstrap.min.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('fontello-fb4e0e35/css/fontello.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('style.css')) }}">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        {# <a class="navbar-brand" href="#">JS</a> #}
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {% block homeLi %}
                <li class="nav-item">
                {% endblock %}
                    <a class="nav-link" href="{{ absolute_url(path('home')) }}">
                        Strona Główna
                    </a>
                </li>

                {% block testLi %}
                <li class="nav-item">
                {% endblock %}
                    <a class="nav-link disabled" href="#">
                        Sprawdziany
                    </a>
                </li>


                {% block basicsLi %}
                <li class="nav-item dropdown">
                {% endblock %}
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Podstawy
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        {% for lang in languages %}
                            <a class="dropdown-item" href="{{ absolute_url(path('basics', { "language": lang, "page": 1 })) }}">
                                {{ lang }}
                            </a>
                        {% endfor  %}
                    </div>
                </li>

                {% block taskLi %}
                <li class="nav-item dropdown">
                {% endblock %}
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Zadania
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        {% for lang in languages %}
                            <a class="dropdown-item" href="{{ absolute_url(path('tasks', { "language": lang, "page": 1 })) }}">
                                {{ lang }}
                            </a>
                        {% endfor  %}
                    </div>
                </li>

                {% block courseLi %}
                <li class="nav-item">
                {% endblock %}
                    <a class="nav-link" href="{{ absolute_url(path('courses')) }}">Kursy</a>
                </li>
            </ul>

            {#
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Szukana fraza" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Szukaj</button>
            </form>
            #}
        </div>
    </nav>
</header>

<main>
{% block main %}
{% endblock %}
</main>

<div class="footer">
    <footer class="fu2">
        <p class="footer-text">&copy; Gumil, rg-ts.pl</p>
    </footer>
</div>

<script src="{{ absolute_url(asset('jquery-3.5.1.min.js')) }}"></script>
<script src="{{ absolute_url(asset('bootstrap-4.5.0-dist/js/bootstrap.min.js')) }}"></script>
{% block js %}
{% endblock %}
</body>
</html>