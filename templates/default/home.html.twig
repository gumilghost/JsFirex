{% extends 'base.html.twig' %}

{% block homeLi %}
    <li class="nav-item active">
{% endblock %}

{% block main %}
    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}
    <div class="container mgt">
        <div class="col-lg-12">
            <div class="alert alert-info">
                Dla zainteresowanych link do repozytorium na Github ze źródłem tej strony.
                <a href="https://github.com/gumilghost/JsFirex" target="_blank">Link</a>
            </div>
        </div>
    </div>
    <div class="container mgt">
        <div class="col-lg-12">
            {% if link %}
            <div class="card">
                <div class="card-header">Losowy link z {{ link.language }}</div>
                <div class="card-body">
                    <a target="_blank" href="{{ link.reference }}">{{ link.title }}</a>
                </div>
            </div>
            {% endif  %}
        </div>
    </div>
    <div class="container mgt">
        <div class="col-lg-12">
            <div class="tile-container">
                <a class="tile" href="{{ absolute_url(path('basics', { "language": "JavaScript", "page": 1})) }}">
                    Podstawy JavaScript
                </a>
                <a class="tile" href="{{ absolute_url(path('tasks', { "language": "JavaScript", "page": 1})) }}">
                    Zadania z JavaScript
                </a>
                <a class="tile" href="{{ absolute_url(path('courses')) }}">
                    Kursy
                </a>
            </div>
        </div>
    </div>
{% endblock %}
